<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/datasetDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berikut adalah sampel data dari dataset prediksi tingkat kematian. Dataset ini berisi nilai-nilai medis yang digunakan oleh model prediktif untuk menentukan risiko kematian pasien."
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <!-- Tabel scrollable -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <TableLayout
                android:id="@+id/datasetTable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="#FFFFFF"
                android:padding="8dp" />
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
